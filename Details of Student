class stu
{	
    int rollno;
    String name;
    int marks[];
  
  stu() //non paramitrized 
  {
      rollno =51;
      name= "Sarvagya Bansal";
      marks = new int[5];
      for(int i=0;i<marks.length;i++)
      {
          marks[i] = 50;
      }
	}
public void display()
{
    System.out.print("Rollno - ");
    System.out.println(rollno);
    System.out.print("Name- ");
    System.out.println(name);
    System.out.println("Marks as follow");
    for(int i= 0;i<marks.length;i++)
    System.out.println(marks[i]);

    System.out.println();
}
}
public class Main
{
    public static void main (String[] args)
    {
        stu obj1 = new stu();
        obj1.display();
        
     }  
}

